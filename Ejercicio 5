                    Console.ReadKey();
                    Environment.Exit(0);
                    break;
            }

            B1 = B1 * 10;
            B = B1 + B2;
            TOTAL = B * MULT;

            if (TOTAL>=1000 && TOTAL<1000000)
            {
                TOTAL = TOTAL / 1000;
                Console.Write("\n");
                Console.Write("\t\t\t\t\t\tValor de una resistencia");
                Console.Write("\n\n");
              
                Console.Write("\tEl valor de la resistencia es de " + TOTAL + " Kiloohms con ±" + TOL + "% de tolerancia");

            }else if (TOTAL>=1000000 && TOTAL<1000000000)
                    {
                TOTAL = TOTAL / 1000000;

                Console.Write("\n");
                Console.Write("\t\t\t\t\t\tValor de una resistencia");
                Console.Write("\n\n");

                Console.Write("\tEl valor de la resistencia es de " + TOTAL + " Megaohms con ±" + TOL + "% de tolerancia");
            }
            else if (TOTAL>=1000000000)
            {
                TOTAL = TOTAL / 1000000000;

                Console.Write("\n");
                Console.Write("\t\t\t\t\t\tValor de una resistencia");
                Console.Write("\n\n");
                
                Console.Write("\tEl valor de la resistencia es de " + TOTAL + " Gigaohms con ±" + TOL + "% de tolerancia");
            }
            else
            {
                Console.Write("\n");
                Console.Write("\t\t\t\t\t\tValor de una resistencia");
                Console.Write("\n\n");
              
                Console.Write("\tEl valor de la resistencia es de " + TOTAL + " ohms con ±" + TOL + "% de tolerancia");
            }
            
            Console.ReadKey();
