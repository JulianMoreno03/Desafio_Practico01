            Console.Write("\t6) Verde");
            Console.Write("\n");
            Console.Write("\t7) Azul");
            Console.Write("\n");
            Console.Write("\t8) Violeta");
            Console.Write("\n");
            Console.Write("\t9) Gris");
            Console.Write("\n");
            Console.Write("\t10) Blanco");
            Console.Write("\n\n");
            Console.Write("\tDigite la opcion deseada (1...10): ");
            opcion = int.Parse(Console.ReadLine());
            Console.Clear();

            switch (opcion)
            {
                case 1:
                    B2 = 0;
                    break;

                case 2:
                    B2 = 1;
                    break;

                case 3:
                    B2 = 2;
                    break;

                case 4:
                    B2 = 3;
