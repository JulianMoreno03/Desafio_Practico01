            Console.Write("\t7) Azul");
            Console.Write("\n");
            Console.Write("\t8) Violeta");
            Console.Write("\n");
            Console.Write("\t9) Gris");
            Console.Write("\n");
            Console.Write("\t10) Blanco");
            Console.Write("\n\n");
            Console.Write("\tDigite la opcion deseada (1...10): ");
            opcion = int.Parse(Console.ReadLine());
