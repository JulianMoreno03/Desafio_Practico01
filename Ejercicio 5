                case 3:
                    MULT = 100;
                    break;

                case 4:
                    MULT = 1000;
                    break;

                case 5:
                    MULT = 10000;
                    break;

                case 6:
                    MULT = 100000;
                    break;

                case 7:
                    MULT = 1000000;
                    break;

                case 8:
                    MULT = 10000000;
                    break;

                case 9:
                    MULT = 100000000;
                    break;

                case 10:
                    MULT = 1000000000;
                    break;

                case 11:
                    MULT = 0.1;
                    break;

                case 12:
                    MULT = 0.01;
