            switch (opcion)
            {
                case 1:
                    B1 = 0;
                    break;

                case 2:
                    B1 = 1;
                    break;

                case 3:
                    B1 = 2;
                    break;

                case 4:
                    B1 = 3;
                    break;

                case 5:
                    B1 = 4;
                    break;

                case 6:
                    B1 = 5;
                    break;

                case 7:
                    B1 = 6;
                    break;

                case 8:
                    B1 = 7;
                    break;

                case 9:
                    B1 = 8;
                    break;

                case 10:
                    B1 = 9;
                    break;


                default:
                    Console.Write("\n");
                    Console.Write("\tInserte un opcion valida (1...10)");
                    Console.ReadKey();
                    Environment.Exit(0);
                    break;
            }

           

            Console.Write("\n");
            Console.Write("\t\t\t\t\t\tValor de una resistencia");
            Console.Write("\n\n");

            Console.Write("\tMenu de colores de la segunda banda");
            Console.Write("\n\n");
            Console.Write("\t1) Negro");
            Console.Write("\n");
            Console.Write("\t2) Marrón");
            Console.Write("\n");
            Console.Write("\t3) Rojo");
            Console.Write("\n");
            Console.Write("\t4) Naranja");
