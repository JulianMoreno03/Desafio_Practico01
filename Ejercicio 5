            Double B2 = 0;
            Double MULT = 0;
            Double TOL = 0;
            Double B = 0;
            Double TOTAL;
            int opcion;
            //B1= banda 1, B2= banda 2, MULT= multiplicador, TOL= tolerancia, B=La suma de b1+b2.

            Console.Write("\tMenu de colores de la primer banda");
            Console.Write("\n\n");
            Console.Write("\t1) Negro");
            Console.Write("\n");
            Console.Write("\t2) Marrón");
