            Console.Write("\t2) Marrón");
            Console.Write("\n");
            Console.Write("\t3) Rojo");
            Console.Write("\n");
            Console.Write("\t4) Naranja");
            Console.Write("\n");
            Console.Write("\t5) Amarillo");
